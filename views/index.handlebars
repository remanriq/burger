
<div class="row">
  <center>
    <img src="/assets/images/burger.png" width=200px height=150px> 
      <h2> Eat-Da-Burger! </h2>
</div>
  
  {{!-- burger list before being eaten --}} 
  <div class="row">
      <div class="col-xs-6 col-offset-2">
        <div class="panel-panel-sm">
           <ul class="list-group-sm"> 
            {{#each burgers}} 
                {{#unless devoured}} 
           <li class="list-group-item">
                  <div class="input-group">
                  <p class="lead"> {{this.burger_name}} </p>
                   <span class="input-group-btn">
                <form action="/updateOne?_method=PUT" method="POST">
                  <input type="hidden" name="this.burger_name" value="{{this.id}}">
                  <button class="btn btn-default" type="submit">Devour!</button>
                </form>
              </span>
            </div>
            <br>
          </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
  </div>
    {{!-- burger list after being eaten --}}
    <div class="row">
      <div class="col-xs-4 col-offset-2">
      <div class="panel panel-sm">
        <ul class="list-group"> 
        {{#each burgers}}
          {{#if this.devoured}} 
          <li class="list-group-item">
            <p class="lead">{{this.burger_name}}</p>
          </li>
          {{/if}}
        {{/each}}
        <br>
        </ul>
      </div>
    </div>
  </div>
  <div class="container">
  <div class = "row">
  <div class="col-xs-12 text-center enter_section">
    <p class="lead">What kind of Burger would you like? Enter the name below! </p>

    {{!-- section to add burgers --}}
    <form class="create-update-form" action="/insertOne" method="POST">
      <div class="form-group-small">
        <textarea class="form-control-form-small" type="text" name="burger_name" rows="4"></textarea>
      </div>
      </div>
      </div>
      <button class="btn btn-default" type="submit">Submit!</button>
    </form>
  </div> 
  </center>
</div>